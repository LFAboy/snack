{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "bower_components",
    "jspm_packages"
  ],
  "compilerOptions": {
    "strict": true,
    "module": "ES6",
    "target": "ES2015",
    "noEmitOnError": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  }
}